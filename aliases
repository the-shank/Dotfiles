# tree
alias tree="tree -C"
alias tree1="tree -L 1"
alias tree2="tree -L 2"
alias tree3="tree -L 3"
alias tree4="tree -L 4"
alias t1="tree1"
alias t2="tree2"
alias t3="tree3"
alias t4="tree4"

# lsd
alias ls='lsd'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
alias lt1='lt --depth 1'
alias lt2='lt --depth 2'
alias lt3='lt --depth 3'
alias lt3='lt --depth 4'
alias ltl='ll --tree'
alias lta='la --tree'
alias ltla='lla --tree'

# bat
alias cat='bat'

# mit-scheme
alias sicp="rlwrap scheme"

# reset vivaldi
alias reset_vivaldi_osx="rm -rf \"/Users/shank/Library/Application Support/Vivaldi\""
alias reset_vivaldi_linux="rm -rf /home/shank/.config/vivaldi/"

# alias xdg-open
if hash xdg-open 2>/dev/null; then
    alias open=xdg-open
fi
