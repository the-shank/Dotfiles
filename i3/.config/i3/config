# drop-down terminal
bindsym $alt+o exec --no-startup-id xfce4-terminal --drop-down

# safeeyes
exec --no-startup-id safeeyes &

# logseq
exec --no-startup-id logseq &
for_window [class="Logseq"] floating enable, resize set width 80 ppt height 90 ppt, move scratchpad
bindsym $alt+p scratchpad show

# fzf-greenclip for searching clipboard
for_window [class="floating"] floating enable, resize set 900 400, move position center
bindsym $alt+comma exec alacritty --class floating -e bash -c '/home/shank/.local/bin/fzf-greenclip && sleep 0.1'
