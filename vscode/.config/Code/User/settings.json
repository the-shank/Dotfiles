{
    "codeQL.telemetry.enableTelemetry": false,
    "codeQL.cli.executablePath": "/home/shank/code/applications/codeql/codeql",
    "workbench.colorTheme": "GitHub Dark",
    "window.menuBarVisibility": "toggle",
    "editor.lineNumbers": "relative",
    "security.workspace.trust.untrustedFiles": "open",
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "purs3apple.ecn.purdue.edu": "linux",
        "optiplex": "linux",
        "mc18.cs.purdue.edu": "linux"
    },
    // font
    "editor.fontFamily": "FiraCode Nerd Font, NotoSansMono Nerd Font, Iosevka, Droid Sans Mono, monospace",
    "editor.fontSize": 13,
    "editor.fontWeight": "450",
    // integrated terminal
    "terminal.integrated.scrollback": 500000,
    "terminal.integrated.fontSize": 13,
    // vim keybindings
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindings": [
        {
            "before": ["leader", "/"],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        },
        {
            "before":["leader", "h"],
            "commands": [
                ":nohl",
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["leader", "/"],
            "commands": [
                "editor.action.commentLine"
            ]
        },
    ],
    "editor.minimap.enabled": false
}
